<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DetailLeagueActivity">

    <TextView
        android:id="@+id/activitydetailleague_tv_leaguename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spanish La Liga"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/activitydetailleague_iv_leaguethumb"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@id/activitydetailleague_tv_leaguename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_spanish_la_liga"
        android:layout_margin="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/activitydetailleague_nsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activitydetailleague_iv_leaguethumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/activitydetailleague_tv_leaguedesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="detail league here"
            android:layout_margin="8dp"
            android:textSize="18sp"/>

    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/activitydetailleague_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>