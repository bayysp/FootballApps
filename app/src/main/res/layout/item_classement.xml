<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_classement_ivteam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/img_french_ligue_1" />

        <TextView
            android:id="@+id/item_classement_tvteam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/liverpool"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_classement_tvwin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/_20"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_classement_tvlose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/_20"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_classement_tvtotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/_20"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>